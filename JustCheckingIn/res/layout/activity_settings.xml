<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="vertical" >
	    
        <TextView
            android:id="@+id/warningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Keep in mind that every emergency contact will receive a SMS message which will charge you based on your mobile plan" />

	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_below="@+id/relativeLayout1" >
	
	    <Button
	        android:id="@+id/buttonEmergencyContacts"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:text="Change Emergency Contacts" />
	
	    <ImageButton
	        android:id="@+id/numbersButton"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/emergency_numbers_button"
	        android:src="@drawable/emergency_numbers_32_white" />
	    
	    <Switch
	        android:id="@+id/switchGPS"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/buttonEmergencyContacts"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="50dp"
	        android:text="GPS" />
	
	</RelativeLayout>
</RelativeLayout>
